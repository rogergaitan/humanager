<%- model_class = DocumentNumber -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @document_number.company_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @document_number.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_type) %>:</strong></dt>
  <dd><%= @document_number.document_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_type) %>:</strong></dt>
  <dd><%= @document_number.number_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_number) %>:</strong></dt>
  <dd><%= @document_number.start_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mask) %>:</strong></dt>
  <dd><%= @document_number.mask %></dd>
  <dt><strong><%= model_class.human_attribute_name(:terminal_restriction) %>:</strong></dt>
  <dd><%= @document_number.terminal_restriction %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              document_numbers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_number_path(@document_number), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_number_path(@document_number),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
