<%= form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :entity_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :entity_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :province_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :province_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :canton_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :canton_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :district_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :district_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn' %>
  </div>
<% end %>
