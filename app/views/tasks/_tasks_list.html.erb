<% @tasks.each do |task| %>
  <tr>
    <td><%= task.nactivity %></td>
    <td><%= task.itask %></td>
    <td><%= task.ntask %></td>
    <td><%= task.nunidad %></td>
    <td><%= task.currency.try :name %></td>
    <td><%= task.currency.try :symbol%><%= number_to_currency task.cost, unit: "" %></td>
    <td>
      <% if can? :update, Task %>
        <%= check_box_tag :update_cost, task.id %>
      <% end %>
    </td>
  </tr>
<% end %>
</div>
