<div class="container-fluid">
  <div data-widget-group="group1" class="ui-sortable">

    <% if @task.errors.any? %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <h3><%= pluralize(@task.errors.count, "error") %> no permitieron actualizar esta labor:</h3>
        <% @task.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
        <br>
      </div>
    <% end %>

    <div class="panel panel-primary" data-widget="{&quot;draggable&quot;: &quot;false&quot;}" data-widget-static="">

      <div class="panel-heading"></div>

      <div class="panel-body panel-no-padding">
        <%= form_for @task, :html => { :class => 'form-horizontal row-border' } do |f| %>

          <div class="form-group">
            <%= f.label :nactivity, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
               <%= f.text_field :nactivity, :class => 'form-control', :readonly => true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :itask, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
               <%= f.text_field :itask, :class => 'form-control', :readonly => true %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :ntask, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
               <%= f.text_field :ntask, :class => 'form-control', :readonly => true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :currency_id, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
               <%= f.collection_select(:currency_id, @currencies, :id, :name,
                  options = {:prompt => false}, html_options = {:class => 'form-control' }) %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :cost, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
               <%= f.text_field :cost, :class => 'form-control' %>
            </div>
          </div>

          <div class="panel-footer">
            <div class="row">
              <div class="col-sm-8 col-sm-offset-2">
                <%= f.submit :class => 'btn-primary btn' %>
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  cantons_path, :class => 'btn-default btn' %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
