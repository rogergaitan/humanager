<%- model_class = Task -%>
<%= javascript_include_tag 'tasks/script' %>
<div class="page-header">
  <h1><%=t '.Labores'%>
  <button id="task-fb" class="btn btn-primary pull-right">
    <i class='icon-refresh'></i>
  </button></h1>
</div>
<table class="table table-striped" id="task-data">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:iactivity) %></th>
      <th><%= model_class.human_attribute_name(:itask) %></th>
      <th><%= model_class.human_attribute_name(:ntask) %></th>
      <th><%= model_class.human_attribute_name(:iaccount) %></th>
      <th><%= model_class.human_attribute_name(:mlaborcost) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <td><%= task.iactivity %></td>
        <td><%= task.itask %></td>
        <td><%= task.ntask %></td>
        <td><%= task.iaccount %></td>
        <td><%= task.mlaborcost %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>