<%- model_class = LedgerAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:iaccount) %>:</strong></dt>
  <dd><%= @ledger_account.iaccount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:naccount) %>:</strong></dt>
  <dd><%= @ledger_account.naccount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ifather) %>:</strong></dt>
  <dd><%= @ledger_account.ifather %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ledger_accounts_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ledger_account_path(@ledger_account),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
