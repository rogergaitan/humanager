<%= form_for @occupation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ins_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ins_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ccss_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ccss_code, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                occupations_path, :class => 'btn' %>
  </div>
<% end %>
