<%= form_for @occupation, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">

    <%= f.label :description, t('activerecord.models.description'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>

    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                occupations_path, :class => 'btn' %>
  </div>
<% end %>

