<%- model_class = ProductPricing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @product_pricing.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:utility) %>:</strong></dt>
  <dd><%= @product_pricing.utility %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_type) %>:</strong></dt>
  <dd><%= @product_pricing.price_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @product_pricing.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sell_price) %>:</strong></dt>
  <dd><%= @product_pricing.sell_price %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              product_pricings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_pricing_path(@product_pricing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_pricing_path(@product_pricing),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
