<%- model_class = ProductPricing -%>
<table class="table table-striped" id="tableprices">
    <thead>
        <tr>
            <th><%= model_class.human_attribute_name(:product_id) %></th>
            <th><%= model_class.human_attribute_name(:utility) %></th>
            <th><%= model_class.human_attribute_name(:price_type) %></th>
            <th><%= model_class.human_attribute_name(:category) %></th>
            <th><%= model_class.human_attribute_name(:sell_price) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
    <% @product_pricings.each do |product_pricing| %>
    <tr>
        <td class="product_id"><%= link_to product_pricing.product_id, product_path(product_pricing.product_id) %><%= hidden_field :id, product_pricing.id, value: product_pricing.id  %></td>
        <td class="utility"><%= product_pricing.utility %></td>
        <td class="price_type"><%= product_pricing.price_type %></td>
        <td class="category"><%= product_pricing.category %></td>
        <td class="sell_price"><%= product_pricing.sell_price %></td>
        <td>
        <a  href="#modalnew" role="button" 
            class="btn btn-mini edit_price" data-toggle="modal">
            <%=t('.edit', :default => t("helpers.links.edit"))%>
        </a>

        <%= link_to t('.destroy', :default => t("helpers.links.destroy")), 
            product_pricing_path(product_pricing),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                :default => 'Are you sure?'))},
                :class => 'btn btn-mini btn-danger' %>
        </td>
    <% end %>

  </tbody>
</table>
</br>
<div>

<a href="#modalnew" role="button" class="btn btn-maniadmin-2 new_price" data-toggle="modal"><%=t("helpers.links.new")%>
</a>
</div>
</br>
<div id="modalnew" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= form_for @product_pricing, 
    :validate => true, 
    :url => product_pricings_path(@product_pricing), 
    :remote => true, 
    :html => { :class => 'form-horizontal' } do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Crear Precio</h3>
  </div>
  <div class="modal-body">    
    <%= render 'forms/product_pricings_form', :f => f %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= f.submit nil, :class => 'btn btn-primary new-edit' %>
  </div>
  <% end %>
</div>
