<%- model_class = ProductPricing -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:utility) %></th>
      <th><%= model_class.human_attribute_name(:price_type) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:sell_price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @product_pricings.each do |product_pricing| %>
      <tr>
            <td><%= link_to product_pricing.product_id, product_path(product_pricing.product_id), :product_id => product_pricing.id, :id => product_pricing.id %></td>
            <td><%= product_pricing.utility %></td>
            <td><%= product_pricing.price_type %></td>
            <td><%= product_pricing.category %></td>
            <td><%= product_pricing.sell_price %></td>
            <td>
              <a href="#myModal" role="button" class="btn btn-mini" data-toggle="modal"><%=t('.destroy', :default => t("helpers.links.edit"))%></a>
              
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          product_pricing_path(product_pricing),
                          :method => :delete,
                          :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                          :class => 'btn btn-mini btn-danger' %>
            </td>
     
      </tr>

      <tr>
<div class="modal hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-body">
        <%=render :partial  => 'product_pricings/form', :locals => { :product_pricing => product_pricing.id  }%> 
    </div>            
</div>
      </tr>
    <% end %>

  </tbody>
</table>


<a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">Nuevo</a>