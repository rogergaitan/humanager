<%- model_class = User -%>

<div id="list_users">

  <%= will_paginate @users, :class =>'pagination pagination-centered' %>

  <table class="table table-striped" id="employee-data">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:username) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th>Seleccionar</th>
      </tr>
    </thead>
    <tbody>
      <% unless @users.empty?  %>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= "#{user.username}" %>
            </td>
            <td>
              <%= "#{user.name}" %>
            </td>
            <td>
              <%= "#{user.email}" %>
            </td>
            <td>
              <input type="button" id="<%= user.id %>" value="Cargar" >
            </td>
          </tr>
        <% end %>
      <% else %>
        <div class="alert alert-block alert-error">
          <%= t("notice.no_results") %>
        </div>
      <% end %>
    </tbody>
  </table>

</div>
