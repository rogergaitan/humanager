<%- model_class = WorkBenefit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @work_benefit.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:percentage) %>:</strong></dt>
  <dd><%= @work_benefit.percentage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:debit_account) %>:</strong></dt>
  <dd><%= @work_benefit.debit_account %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credit_account) %>:</strong></dt>
  <dd><%= @work_benefit.credit_account %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              work_benefits_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_work_benefit_path(@work_benefit), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              work_benefit_path(@work_benefit),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
