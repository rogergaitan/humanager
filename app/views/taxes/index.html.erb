<%- model_class = Taxis -%>
<div id="section-body" class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a data-toggle="tab" href="#tab1">
        <%=t '.title', :default => model_class.model_name.human.pluralize %>
      </a>
    </li>
  </ul>
  <div class="tab-content">
    <div id="tab1" class="tab-pane active">
      <div class="row-fluid">
        <div id="accordion1" class="accordion">
          <div class="accordion-group">
            <div class="accordion-heading">
              <a class="accordion-toggle" data-original-title="" href="#taxes" data-toggle="collapse">
                <i class="icon-th icon-white"></i>
                <span class="divider-vertical"></span>
                <%=t '.title', :default => model_class.model_name.human.pluralize %>
                <i class="icon-chevron-down icon-white pull-right"></i>
              </a>
            </div>
            <div id="taxes" class="accordion-body collapse in">
              <div class="accordion-inner paddind">
                <div id="example_wrapper" class="dataTables_wrapper" role="grid">
                  <table id="example" class="table table-bordered" aria-describedby="example_info">
                    <thead>
                      <tr role="row">
                        <th style="width: 250px;">
                          <%= model_class.human_attribute_name(:name) %>
                        </th>
                        <th style="width: 50px;">
                          <%= model_class.human_attribute_name(:percentage) %>
                        </th>
                        <th style="width: 90px;">
                          <%= model_class.human_attribute_name(:cc_id) %>
                        </th>
                        <th style="width: 130px;">
                          <%=t '.actions', :default => t("helpers.actions") %>
                        </th>
                      </tr>
                    </thead>
                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                      <% @taxes.each do |taxis| %>
                        <tr class="gradeA odd">
                          <td><%= taxis.name %></td>
                          <td><%= taxis.percentage %></td>
                          <td><%= taxis.cc_id %></td>
                          <td>
                            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                        edit_taxis_path(taxis), :class => 'btn btn-mini btn-maniadmin-8' %>
                            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                        taxis_path(taxis),
                                        :method => :delete,
                                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                        :class => 'btn btn-mini btn-maniadmin-5' %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  </br>
                  <div>
                    <%= link_to t('.new', :default => t("helpers.links.new")), new_taxis_path, :class => 'btn btn-maniadmin-2' %>
                  </div>
                  </br>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>