<%= form_for @detail_personnel_action, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :type_of_personnel_action_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :type_of_personnel_action_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fields_personnel_action_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :fields_personnel_action_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                detail_personnel_actions_path, :class => 'btn' %>
  </div>
<% end %>
