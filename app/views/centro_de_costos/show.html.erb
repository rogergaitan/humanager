<%- model_class = CentroDeCosto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:iempresa) %>:</strong></dt>
  <dd><%= @centro_de_costo.iempresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:icentro_costo) %>:</strong></dt>
  <dd><%= @centro_de_costo.icentro_costo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre_cc) %>:</strong></dt>
  <dd><%= @centro_de_costo.nombre_cc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:icc_padre) %>:</strong></dt>
  <dd><%= @centro_de_costo.icc_padre %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              centro_de_costos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_centro_de_costo_path(@centro_de_costo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              centro_de_costo_path(@centro_de_costo),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
