<div clas="group-menu nav-collapse">
	<div class='btn-group pull-right'>
		<% if user_signed_in? %>
			<a class="btn btn-info">
				<i class="icon-globe"></i>
				<%= session[:company_id] ? session[:company] : default_company %>
			</a>
			<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
		    <i class="icon-user"></i>
		    <%=current_user.email %>
		    <span class="caret"></span>
		  </a>
		    <ul class="dropdown-menu">
		  	  <li>
		  	  	<a href="#">
		  	  		Profile
		  	  	</a>
		  	 	</li>
		      <li class="divider"></li>
		      <li>
		      	<%= link_to 'Cerrar Sesión', destroy_user_session_path, :method => 'delete' %>
		      </li>
		    </ul>
		<% else%>	
			<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">  
				<i class="icon-user"></i>
				Usuario	
				<span class="caret"></span>
			</a>
	  	<ul class="dropdown-menu">
		  	<li>
		  		<%= link_to "Iniciar Sesión", new_user_session_path %>
		  	</li>
		  	<li class="divider"></li>
		  	<li>
		  		<%= link_to "Registrarse", new_user_registration_path %>
		  	</li>
			</ul>
		<%end%>
	</div>
	<ul class="nav pull-right">
		<li class="divider-vertical"></li>
	</ul>
	<form id="product_search" class="navbar-search pull-right">
		<input id="product_id" type="hidden">
		<input id="product_code" type="hidden">
		<input id="product_name" class="search-query" type="text" placeholder="Productos">
	</form>
</div>