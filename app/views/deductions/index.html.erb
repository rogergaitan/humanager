<%- model_class = Deduction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:deduction_type) %></th>
      <th><%= model_class.human_attribute_name(:amount_exhaust) %></th>
      <th><%= model_class.human_attribute_name(:calculation_type) %></th>
      <th><%= model_class.human_attribute_name(:calculation) %></th>
      <th><%= model_class.human_attribute_name(:ledger_account_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deductions.each do |deduction| %>
      <tr>
        <td><%= link_to deduction.description, deduction_path(deduction) %></td>
        <td><%= deduction.deduction_type %></td>
        <td><%= deduction.amount_exhaust %></td>
        <td><%= deduction.calculation_type %></td>
        <td><%= deduction.calculation %></td>
        <td><%= deduction.ledger_account.naccount if deduction.ledger_account %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deduction_path(deduction), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deduction_path(deduction),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deduction_path,
            :class => 'btn btn-primary' %>
