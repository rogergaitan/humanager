<script type="text/javascript">
  var cuenta_credito = [];
  <%  @credit_account.each do |cc| %>
    cuenta_credito.push(new Array(
      <%= cc.iaccount.blank? ? 0 : cc.iaccount %>, 
      '<%=h cc.naccount %>', 
      <%= cc.ifather.blank? ? 0 : cc.ifather %>, 
      <%= cc.id %>, 
      <%= cc.iaccount %>
    ));
  <% end %>

  var employees = [];
  <% @employees.each do |e| %>
    employees.push({
      id: <%= e.id %>,
      number_employee: <%= e.number_employee ? e.number_employee : 'null' %>,
      full_name: '<%= "#{e.entity.surname} #{e.entity.name}" %>'
    });
  <% end %>

</script>

