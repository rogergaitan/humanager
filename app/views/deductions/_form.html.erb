            </div>
          </div>

          <div class="panel-footer">
            <div class="row">
              <div class="col-sm-8 col-sm-offset-2">
                <%= f.submit nil, :class => 'btn-primary btn', :id => "member_submit" %>
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  deductions_path, :class => 'btn-default btn' %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

