<%- model_class = CostsCenter -%>

<script type="text/javascript">
  var centro_costos = [];
  <% @costs_centers.each do |cc| %>
    centro_costos.push(new Array(
      '<%= cc.icost_center.blank? ? 0 : cc.icost_center %>',
      '<%=h cc.name_cc %>',
      '<%= cc.icc_father.blank? ? 0 : cc.icc_father %>',
      <%= cc.id %>
    ));
  <% end %>
</script>

<%= javascript_include_tag 'centro_costos/sync_cc' %>
<%= javascript_include_tag 'centro_costos/treeview' %>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %>
    <button id="sync-cc" class="btn btn-primary pull-right">
      <i class='icon-refresh'></i>
    </button>
  </h1>
</div>

<div id="list"></div>
