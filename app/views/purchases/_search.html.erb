<%- model_class = Purchase -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:document_number) %></th>
      <th><%= model_class.human_attribute_name(:vendor_id) %></th>
      <th><%= model_class.human_attribute_name(:purchase_date) %></th>
      <th><%= model_class.human_attribute_name(:currency) %></th>
      <th><%= model_class.human_attribute_name(:subtotal) %></th>
      <th><%= model_class.human_attribute_name(:taxes) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @search.each do |purchase| %>
      <tr>
        <td><%= link_to purchase.document_number, purchase_path(purchase) %></td>
        <td><%= purchase.vendor_id %></td>
        <td><%= purchase.purchase_date %></td>
        <td><%= purchase.currency %></td>
        <td><%= purchase.subtotal %></td>
        <td><%= purchase.taxes %></td>
        <td><%= purchase.total %></td>
        <td>
          <%= link_to t('.pdf', :default => t("helpers.links.PDF")), purchase_path(purchase, :format => :pdf), :class => 'btn btn-mini btn-success' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_purchase_path(purchase), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            purchase_path(purchase),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>