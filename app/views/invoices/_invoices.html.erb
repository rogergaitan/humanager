<%- model_class = Invoice -%>
<div id="invoices">
  <%= will_paginate :class =>'pagination pagination-centered' %>
  <table class="table table-striped table-condensed table_invoices">
    <thead>
        <th><%= model_class.human_attribute_name(:document_date) %></th>
        <th><%= model_class.human_attribute_name(:customer_id) %></th>
        <th><%= model_class.human_attribute_name(:document_number) %></th>        
        <th><%= model_class.human_attribute_name(:total) %></th>
        <th><%= model_class.human_attribute_name(:due_date) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </thead>
    <tbody>
      <% unless @invoices.empty? %>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.document_date %></td>
            <td><%= invoice.customer.entity.name %></td>
            <td><%= invoice.document_number %></td>
            <td><%= number_to_currency(invoice.total, :unit => 'â‚¡') %></td>
            <td><%= invoice.due_date %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_invoice_path(invoice), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  invoice_path(invoice), :method => :delete,
                  :data => { :confirm => t('.confirm', 
                  :default => t("helpers.links.confirm", 
                    :default => 'Are you sure?')) },
                  :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr><td colspan="5"><p class="info">Ninguna venta encontrada</p></td></tr>
      <% end %>
    </tbody>
  </table>
</div>