<div class="contact">
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span><%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :occupation, :class => 'control-label' %>
    <div class="controls">
    <div class="input-prepend">
        <span class="add-on">O</span><%= f.text_field :occupation, :class => 'text_field' %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
       <div class="input-prepend">
        <span class="add-on"><i class="icon-phone"></i></span><%= f.text_field :phone, :class => 'text_field' %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-envelope"></i></span><%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :skype, :class => 'control-label' %>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="">S</i></span><%= f.text_field :skype, :class => 'text_field' %>
      </div>
      <%= f.hidden_field :_destroy %>
      <%= link_to I18n.t(".helpers.links.destroy"), '#', class: "remove_contact btn btn-mini btn-danger" %>
    </div>
  </div>
<hr />
</div>
