<div class="employee_contact_fields">
	<div class="control-group">
		<%= f.label :email, :class => 'control-label' %>
		<div class="controls">
			<div class="input-prepend">
				<span class="add-on"><i class="icon-envelope"></i></span><%= f.text_field :email, :class => 'text_field email-field' %>
			</div>
			<%= f.hidden_field :_destroy, :class => 'emails' %>
			<%= link_to "remove", '#', class: "email-remove remove_fields btn btn-mini btn-danger" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :typeemail, :class => 'control-label' %>
		<div class="controls">
			<div class="input-prepend">
				<span class="add-on">T</span><%= f.enum_select :typeemail, :include_blank => false %>
			</div>
		</div>
	</div>
</div>  