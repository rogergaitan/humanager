<div class="employee_contact_fields">
	<div class="form-group">
		<%= f.label :email, :class => 'col-sm-2 control-label' %>
		<div class="col-sm-3">
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-phone"></i></span>
				<%= f.text_field :email, :class => 'form-control email-field' %>
			</div>
		</div>
		<div class="col-sm-1">
			<%= f.hidden_field :_destroy, :class => 'emails' %>
			<%= link_to '#', class: "btn btn-xs btn-danger-alt email-remove remove_fields" do %>
	   			<i class="fa fa-trash-o"></i>
	        <% end %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :typeemail, :class => 'col-sm-2 control-label' %>
		<div class="col-sm-3">
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-phone"></i></span>
				<%= f.enum_select( :typeemail, {:include_blank => false}, {:class => 'form-control'}) %>
			</div>
		</div>
	</div>
</div>
