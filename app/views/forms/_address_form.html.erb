<div class="form-group">
  <%= f.label :province_id, :class => 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.collection_select( :province_id, @province, :id, :name, 
        options = {:prompt => true}, html_options = {:class => 'form-control'}) %>
  </div>
</div>

<div class="form-group">
  <%= f.label :canton_id, :class => 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.collection_select(:canton_id, @canton, :id, :name, 
    options = {:prompt => true}, html_options = {:class => 'form-control'}) %>
  </div>
</div>

<div class="form-group">
  <%= f.label :district_id, :class => 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.collection_select(:district_id, @district, :id, :name, 
    options = {prompt: true}, html_options = {:class => 'form-control'}) %>
  </div>
</div>

<div class="form-group">
	<%= f.label :address, :class => 'col-sm-2 control-label' %>
	<div class="col-sm-3">
		<%= f.text_area :address, :size => "5x5", :class => 'form-control' %>
	</div>
</div>

