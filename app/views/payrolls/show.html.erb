<%- model_class = Payroll -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:payroll_type_id) %>:</strong></dt>
  <dd><%= @payroll.payroll_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @payroll.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @payroll.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_date) %>:</strong></dt>
  <dd><%= @payroll.payment_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @payroll.state == true ? "Activa" : "Cerrada"%></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payrolls_path, :class => 'btn'  %>
  <% if can? :update, Payroll %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_payroll_path(@payroll), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, Payroll %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                payroll_path(@payroll),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
  <% end %>
</div>
