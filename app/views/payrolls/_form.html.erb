<%= javascript_include_tag 'payroll/dinamic_files' %>
<%= form_for @payroll, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :payroll_type_id, :class => 'control-label' %>
    <div class="controls">
     <!-- <%= f.hidden_field :payroll_type_id %>
      <%= text_field_tag 'payroll_payroll_type',nil, :class => 'number_field required search-image-category', :for => :payroll_type_id %> -->
      <%= collection_select(:payroll, :payroll_type_id, @payroll_types, :id, :description)   %> 
         <a href="#myModal" role="button" class="btn" data-toggle="modal" rel="tooltip" title="Seleccionar tipo de planilla"> <i class="icon-list"></i> </a>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :payment_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :state, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payrolls_path, :class => 'btn' %>
  </div>
<% end %>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Seleccione el tipo de planilla</h3>
  </div>
  <div class="modal-body">
    <div id="admin"> <i class='icon-chevron-right'></i> ADMINISTRATIVA </div> <ul  class='accordion-group' style="display:none" id="list"></ul> <br>
    <div id="campo"> <i class='icon-chevron-right'></i> CAMPO </div> <ul class='accordion-group' style="display:none" id="listCamp"></ul> <br>
    <div id="planta"> <i class='icon-chevron-right'></i> PLANTA<ul class='accordion-group' style="display:none" id="listPlanta"></ul> </div> 
  </div>
  <div class="modal-footer">
    <button id="cerrar" class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
  </div>
</div>