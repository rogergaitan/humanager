<div class="container-fluid">
  <div data-widget-group="group1" class="ui-sortable">

    <% if @means_of_payment.errors.any? %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <h3><%= pluralize(@means_of_payment.errors.count, "error") %> no permitieron guardar este medio de pago:</h3>
        <% @means_of_payment.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
        <br>
      </div>
    <% end %>

    <div class="panel panel-primary" data-widget="{&quot;draggable&quot;: &quot;false&quot;}" data-widget-static="">

      <div class="panel-heading"></div>

      <div class="panel-body panel-no-padding">
        <%= form_for @means_of_payment, :html => { :class => 'form-horizontal row-border',
          :data => {:parsley_validate => ""} } do |f| %>

          <div class="form-group">
            <%= f.label :name, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
              <%= f.text_field :name, :class => 'form-control', :required => true,
                :data => { :parsley_pattern => "/^[A-Za-z0-9\s]+$/",
                :parsley_pattern_message => "Solo se permiten caracteres alphanumericos." } %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-3">
              <%= f.text_field :description, :class => 'form-control' %>
            </div>
          </div>
          
          <div class="panel-footer">
            <div class="row">
              <div class="col-sm-8 col-sm-offset-2">
                <%= f.submit :class => 'btn-primary btn' %>
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  means_of_payments_path, :class => 'btn-default btn' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
