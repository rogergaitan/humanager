<%- model_class = PurchasePaymentOption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:payment_option_id) %></th>
      <th><%= model_class.human_attribute_name(:payment_type_id) %></th>
      <th><%= model_class.human_attribute_name(:purchase_id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_payment_options.each do |purchase_payment_option| %>
      <tr>
        <td><%= link_to purchase_payment_option.id, purchase_payment_option_path(purchase_payment_option) %></td>
        <td><%= purchase_payment_option.payment_option_id %></td>
        <td><%= purchase_payment_option.payment_type_id %></td>
        <td><%= purchase_payment_option.purchase_id %></td>
        <td><%= purchase_payment_option.number %></td>
        <td><%= purchase_payment_option.amount %></td>
        <td><%=l purchase_payment_option.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_purchase_payment_option_path(purchase_payment_option), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      purchase_payment_option_path(purchase_payment_option),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_purchase_payment_option_path,
            :class => 'btn btn-primary' %>
