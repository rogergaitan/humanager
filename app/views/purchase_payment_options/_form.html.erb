<%= form_for @purchase_payment_option, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :payment_option_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :payment_option_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :payment_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :purchase_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :purchase_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchase_payment_options_path, :class => 'btn' %>
  </div>
<% end %>
