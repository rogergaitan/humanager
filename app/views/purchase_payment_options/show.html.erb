<%- model_class = PurchasePaymentOption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:payment_option_id) %>:</strong></dt>
  <dd><%= @purchase_payment_option.payment_option_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_type_id) %>:</strong></dt>
  <dd><%= @purchase_payment_option.payment_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_id) %>:</strong></dt>
  <dd><%= @purchase_payment_option.purchase_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @purchase_payment_option.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @purchase_payment_option.amount %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_payment_options_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_payment_option_path(@purchase_payment_option), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_payment_option_path(@purchase_payment_option),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
