<%- model_class = Product -%>
<div id="section-body" class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a data-toggle="tab" href="#tab1">
        <%=t '.title', :default => model_class.model_name.human %>
      </a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="row-fluid">
      <div id="accordion1" class="accordion">
        <div class="accordion-group">
          <div class="accordion-heading">
            <a class="accordion-toggle" data-original-title="" href="#show" data-toggle="collapse">
              <i class="icon-list-alt icon-white"></i>
              <span class="divider-vertical"></span>
              <%=t '.title', :default => model_class.model_name.human %>
              <i class="icon-chevron-down icon-white pull-right"></i>
            </a>
          </div>
          <div id="show" class="accordion-body in collapse" style="height: auto;">
            <div class="accordion-inner paddind">
              <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
                <dd><%= @product.code %></dd>
                <dt><strong><%= model_class.human_attribute_name(:line_id) %>:</strong></dt>
                <dd><%= @product.line_id %></dd>
                <dt><strong><%= model_class.human_attribute_name(:subline_id) %>:</strong></dt>
                <dd><%= @product.subline_id %></dd>
                <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
                <dd><%= @product.category_id %></dd>
                <dt><strong><%= model_class.human_attribute_name(:part_number) %>:</strong></dt>
                <dd><%= @product.part_number %></dd>
                <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
                <dd><%= @product.name %></dd>
                <dt><strong><%= model_class.human_attribute_name(:make) %>:</strong></dt>
                <dd><%= @product.make %></dd>
                <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
                <dd><%= @product.model %></dd>
                <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
                <dd><%= @product.year %></dd>
                <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
                <dd><%= @product.version %></dd>
                <dt><strong><%= model_class.human_attribute_name(:max_discount) %>:</strong></dt>
                <dd><%= @product.max_discount %></dd>
                <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
                <dd><%= @product.address %></dd>
                <dt><strong><%= model_class.human_attribute_name(:max_cant) %>:</strong></dt>
                <dd><%= @product.max_cant %></dd>
                <dt><strong><%= model_class.human_attribute_name(:min_cant) %>:</strong></dt>
                <dd><%= @product.min_cant %></dd>
                <dt><strong><%= model_class.human_attribute_name(:cost) %>:</strong></dt>
                <dd><%= @product.cost %></dd>
                <dt><strong><%= model_class.human_attribute_name(:bar_code) %>:</strong></dt>
                <dd><%= @product.bar_code %></dd>
                <dt><strong><%= model_class.human_attribute_name(:market_price) %>:</strong></dt>
                <dd><%= @product.market_price %></dd>
                <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
                <dd><%= @product.status %></dd>
                <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
                <dd><%= @product.stock %></dd>
              </dl>
              <div class="form-actions">
                <%= link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn btn-maniadmin-8' %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn btn-maniadmin-2' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product),
                            :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-maniadmin-5' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>