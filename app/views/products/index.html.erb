<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="tabbable"> <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab">General</a></li>
            <li><a href="#tab2" data-toggle="tab">Specific</a></li>
            <li><a href="#tab3" data-toggle="tab">Prices</a> </li>
            <li class='pull-right'>
                 <div>
              <form class="form-search">
                    
                    <div class="input-prepend">
                    <button type="submit" class="btn">Search</button>
                    <input type="text" class="span8 search-query">
                    </div>
                    </form>
                  </div>
            </li> 
            
        </ul>
    <%= will_paginate :class =>'pagination pagination-centered' %>

    <div class="tab-content">
        <div class="tab-pane active" id="tab1">


            <table class="table table-striped">
                <thead>
                    <tr>
                        <th><%= model_class.human_attribute_name(:code) %></th>
                        <th><%= model_class.human_attribute_name(:name) %></th>
                        <th><%= model_class.human_attribute_name(:bar_code) %></th>
                        <th><%= model_class.human_attribute_name(:cost) %></th>
                        <th><%= model_class.human_attribute_name(:status) %></th>
                        <th><%= model_class.human_attribute_name(:stock) %></th>
                        <th><%=t '.actions', :default => t("helpers.actions") %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                    <tr>
                        <td><%= link_to product.code, product_path(product) %></td>
                        <td><%= product.name %></td>
                        <td><%= product.bar_code %></td>
                        <td><%= product.cost %></td>
                        <td><%= product.status %></td>
                        <td><%= product.stock %></td>                                    
                        <td>
                          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                      edit_product_path(product), :class => 'btn btn-mini' %>
                          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                      product_path(product),
                                      :method => :delete,
                                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                                      :class => 'btn btn-mini btn-danger' %>
                        </td>
                  </tr>
                <% end %>
              </tbody>
            </table>            

        </div>

        <div class="tab-pane" id="tab2">
                        <table class="table table-striped">
              <thead>
                <tr>
                    <th><%= model_class.human_attribute_name(:code) %></th>
                  <th><%= model_class.human_attribute_name(:line_id) %></th>
                  <th><%= model_class.human_attribute_name(:subline_id) %></th>
                  <th><%= model_class.human_attribute_name(:category_id) %></th>
                  <th><%= model_class.human_attribute_name(:part_number) %></th>
                  <th><%= model_class.human_attribute_name(:make) %></th>
                  <th><%= model_class.human_attribute_name(:model) %></th>
                  <th><%= model_class.human_attribute_name(:year) %></th>
                  <th><%= model_class.human_attribute_name(:version) %></th>
                  
                  <th><%=t '.actions', :default => t("helpers.actions") %></th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>

                    <td><%= link_to product.code, product_path(product) %></td>
                    
                    <td><%= product.line_id %></td>
                    <td><%= product.subline_id %></td>
                    <td><%= product.category_id %></td>
                    <td><%= product.part_number %></td>
                    
                    <td><%= product.make %></td>
                    <td><%= product.model %></td>
                    <td><%= product.year %></td>
                    <td><%= product.version %></td>
                    <td>
                      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_product_path(product), :class => 'btn btn-mini' %>
                      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  product_path(product),
                                  :method => :delete,
                                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                                  :class => 'btn btn-mini btn-danger' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>    
        </div>
        <div class="tab-pane" id="tab3">
            <table class="table table-striped">
              <thead>
                <tr>

                  <th><%= model_class.human_attribute_name(:code) %></th>                            
                  <th><%= model_class.human_attribute_name(:max_discount) %></th>
                  <th><%= model_class.human_attribute_name(:address) %></th>
                  <th><%= model_class.human_attribute_name(:max_cant) %></th>
                  <th><%= model_class.human_attribute_name(:min_cant) %></th>
                  
                  
                  <th><%= model_class.human_attribute_name(:market_price) %></th>
                  
                  <th><%=t '.actions', :default => t("helpers.actions") %></th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>

                    <td><%= link_to product.code, product_path(product) %></td>
                                        
                    <td><%= product.max_discount %></td>
                    <td><%= product.address %></td>
                    <td><%= product.max_cant %></td>
                    <td><%= product.min_cant %></td>
                   
                    
                    <td><%= product.market_price %></td>
                    
                    
                    <td>
                      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_product_path(product), :class => 'btn btn-mini' %>
                      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  product_path(product),
                                  :method => :delete,
                                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                                  :class => 'btn btn-mini btn-danger' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
