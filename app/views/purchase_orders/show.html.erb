<%- model_class = PurchaseOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vendor_id) %>:</strong></dt>
  <dd><%= @purchase_order.vendor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reference_info) %>:</strong></dt>
  <dd><%= @purchase_order.reference_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency) %>:</strong></dt>
  <dd><%= @purchase_order.currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observation) %>:</strong></dt>
  <dd><%= @purchase_order.observation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtotal) %>:</strong></dt>
  <dd><%= @purchase_order.subtotal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:taxes) %>:</strong></dt>
  <dd><%= @purchase_order.taxes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @purchase_order.total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_date) %>:</strong></dt>
  <dd><%= @purchase_order.delivery_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping_type) %>:</strong></dt>
  <dd><%= @purchase_order.shipping_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_orders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_order_path(@purchase_order), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_order_path(@purchase_order),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
