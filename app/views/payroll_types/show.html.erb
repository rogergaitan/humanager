<%- model_class = PayrollType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @payroll_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payroll_type) %>:</strong></dt>
  <dd><%= @payroll_type.payroll_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payroll_types_path, :class => 'btn'  %>
  <% if can? :update, PayrollType %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_payroll_type_path(@payroll_type), :class => 'btn' %>
  <% end %>

  <% if can? :destroy, PayrollType %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                payroll_type_path(@payroll_type),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
  <% end %>
</div>
