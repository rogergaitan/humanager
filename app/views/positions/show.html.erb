<%- model_class = Position -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @position.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @position.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              positions_path, :class => 'btn'  %>
              
  <% if can? :update, Position %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_position_path(@position), :class => 'btn' %>
  <% end %>

  <% if can? :destroy, Position %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                position_path(@position),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
  <% end %>
</div>
