<%- model_class = Line -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
    <div class='row-fluid'>
        <div class='span4'>
            <h4>Información general</h4>
            <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
                <dd><%= @line.code %></dd>
                <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
                <dd><%= @line.name %></dd>
                <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
                <dd><%= @line.description %></dd>
            </dl>
        </div>
        <div class='span4'>
            <h4>Información contable</h4>
            <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:inventory) %>:</strong></dt>
                <dd><%= @line.inventory %></dd>
                <dt><strong><%= model_class.human_attribute_name(:sale_cost) %>:</strong></dt>
                <dd><%= @line.sale_cost %></dd>
                <dt><strong><%= model_class.human_attribute_name(:utility_adjusment) %>:</strong></dt>
                <dd><%= @line.utility_adjusment %></dd>
                <dt><strong><%= model_class.human_attribute_name(:lost_adjustment) %>:</strong></dt>
                <dd><%= @line.lost_adjustment %></dd>
                <dt><strong><%= model_class.human_attribute_name(:income) %>:</strong></dt>
                <dd><%= @line.income %></dd>
                <dt><strong><%= model_class.human_attribute_name(:sales_return) %>:</strong></dt>
                <dd><%= @line.sales_return %></dd>
                <dt><strong><%= model_class.human_attribute_name(:purchase_return) %>:</strong></dt>
                <dd><%= @line.purchase_return %></dd>
            </dl>
            </div>
        <div class='span4'>
            <h4>Impuestos</h4>
            <dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sale_tax) %>:</strong></dt>
  <dd><%= @line.sale_tax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_tax) %>:</strong></dt>
  <dd><%= @line.purchase_tax %></dd>
            </dl>
        </div>
  </div>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lines_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_line_path(@line), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              line_path(@line),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
