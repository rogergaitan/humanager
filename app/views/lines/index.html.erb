<%- model_class = Line -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      

      
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lines.each do |line| %>
      <tr>
    
        <td><%= link_to line.code, line_path(line) %></td>
        <td><%= line.name %></td>
        <td><%= line.description %></td>

       
        <td>
           <%= link_to t('.show', :default =>t("helpers.links.show_accounting_info") ), line_path(line),:class => 'btn btn-mini'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_line_path(line), :class => 'btn btn-mini' %>
         

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      line_path(line),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_line_path,
            :class => 'btn btn-primary' %>
