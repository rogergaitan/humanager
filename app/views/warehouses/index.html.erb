<%- model_class = Warehouse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#tab1" data-toggle="tab"><%=t("tabs.general")%></a>
        </li>
    </ul>
    <%= will_paginate :class =>'pagination pagination-centered' %>
    <div class="tab-content">
        <div class="tab-pane active" id="tab1">

          <table class="table table-striped">
            <thead>
              <tr>
                
                <th><%= model_class.human_attribute_name(:code) %></th>
                <th><%= model_class.human_attribute_name(:name) %></th>
                <th><%= model_class.human_attribute_name(:description) %></th>
                <th><%= model_class.human_attribute_name(:manager) %></th>
                <th><%= model_class.human_attribute_name(:address) %></th>
                
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
            <tbody>
              <% @warehouses.each do |warehouse| %>
                <tr>

                  <td><%= warehouse.code %></td>
                  <td><%= link_to warehouse.name, warehouse_path(warehouse) %></td>
                  <td><%= warehouse.description %></td>
                  <td><%= warehouse.manager %></td>
                  <td><%= warehouse.address %></td>
                  
                  <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_warehouse_path(warehouse), :class => 'btn btn-mini' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                warehouse_path(warehouse),
                                :method => :delete,
                                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                                :class => 'btn btn-mini btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_warehouse_path,
            :class => 'btn btn-primary' %>
