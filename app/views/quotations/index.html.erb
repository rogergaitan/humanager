<%= javascript_include_tag "quotations/quotations" %>
<%- model_class = Quotation -%>
<legend>
  <%=t '.title', :default => model_class.model_name.human(:count => 2) %>
  
  <%= form_tag search_quotations_path, :id =>"search_form", 
    :class => "form-search pull-right", :method => 'get' do %>
    <button class="btn" id="default_index">Limpiar busquedas</button>
    <%= text_field_tag :search, params[:search], :class => "search-query", 
      :placeholder => model_class.human_attribute_name(:document_number) +
        " รณ "+ model_class.human_attribute_name(:customer_name)
    %>      
  <% end %>
</legend>

<%= render "search" %>

<%= link_to t('.new', :default => t("helpers.links.new")),
  new_quotation_path, :class => 'btn btn-primary' %>
