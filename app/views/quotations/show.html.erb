<%- model_class = Quotation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:document_number) %>:</strong></dt>
  <dd><%= @quotation.document_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @quotation.customer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency) %>:</strong></dt>
  <dd><%= @quotation.currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_date) %>:</strong></dt>
  <dd><%= @quotation.discount_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @quotation.total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @quotation.notes %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    quotations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_quotation_path(@quotation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    quotation_path(@quotation),
      :method => 'delete',
      :data => { :confirm => t('.confirm', 
        :default => t("helpers.links.confirm", 
          :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
</div>
