<%- model_class = Quotation -%>
<div id="quotations">
<%= will_paginate :class =>'pagination pagination-centered' %>
<table class="table table-striped table_quotations">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:document_date) %></th>
      <th><%= model_class.human_attribute_name(:document_number) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% unless @quotations.empty? %>
      <% @quotations.each do |quotation| %>
        <tr>
          <td><%= quotation.document_date %></td>
          <td><%= quotation.document_number %></td>
          <td><%= quotation.customer.entity.name %></td>
          <td><%= quotation.total %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quotation_path(quotation), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quotation_path(quotation),
              :method => :delete,
              :data => { :confirm => t('.confirm', 
                :default => t("helpers.links.confirm", 
                  :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><td colspan="5"><p class="info">Ninguna cotizaci√≥n encontrada</p></td></tr>
    <% end %>
  </tbody>
</table>
</div>