<%- model_class = TypeOfPersonnelAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @type_of_personnel_action.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              type_of_personnel_actions_path, :class => 'btn'  %>

  <% if can? :update, TypeOfPersonnelAction %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_type_of_personnel_action_path(@type_of_personnel_action), :class => 'btn' %>
  <% end %>

  <% if can? :destroy, TypeOfPersonnelAction %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                type_of_personnel_action_path(@type_of_personnel_action),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
  <% end %>
</div>
