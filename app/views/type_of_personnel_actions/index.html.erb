<%- model_class = TypeOfPersonnelAction -%>

<div class="page-heading">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <div class="options">
    <div class="btn-toolbar">
      <% if can? :create, TypeOfPersonnelAction %>
        <%= link_to new_type_of_personnel_action_path, :class => 'btn btn-primary pull-right' do %>
          <i class="fa fa-plus"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid">

  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-primary">
        
        <div class="panel-heading"></div>

        <div class="panel-body panel-no-padding">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:description) %></th>
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
            <tbody>
              <% @type_of_personnel_actions.each do |type_of_personnel_action| %>
                <tr>
                  <td><%= link_to type_of_personnel_action.description, type_of_personnel_action_path(type_of_personnel_action) %></td>
                  <td>
                    <% if can? :update, TypeOfPersonnelAction %>
                      <%= link_to edit_type_of_personnel_action_path(type_of_personnel_action),
                                :class => 'btn btn-xs btn-success-alt' do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                    <% end %>

                    <% if can? :destroy, TypeOfPersonnelAction %>
                      <%= link_to type_of_personnel_action_path(type_of_personnel_action), :method => :delete,
                                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                                  :class => 'btn btn-xs btn-danger-alt' do %>
                        <i class="fa fa-trash-o"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="text-right">    
            <%= will_paginate @task %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
