<%- model_class = TypeOfPersonnelAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<%= will_paginate :class =>'pagination pagination-centered' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @type_of_personnel_actions.each do |type_of_personnel_action| %>
      <tr>
        <td><%= link_to type_of_personnel_action.description, type_of_personnel_action_path(type_of_personnel_action) %></td>
        <td>
          <% if can? :update, TypeOfPersonnelAction %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_type_of_personnel_action_path(type_of_personnel_action), :class => 'btn btn-mini' %>
          <% end %>

          <% if can? :destroy, TypeOfPersonnelAction %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        type_of_personnel_action_path(type_of_personnel_action),
                        :method => :delete,
                        :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                        :class => 'btn btn-mini btn-danger' %>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, TypeOfPersonnelAction %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_type_of_personnel_action_path,
              :class => 'btn btn-primary' %>
<% end %>
