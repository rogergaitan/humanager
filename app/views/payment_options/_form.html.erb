<%= form_for @payment_option, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :related_account, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :related_account, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :use_expenses, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :use_expenses, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :use_incomes, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :use_incomes, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :require_transaction, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :require_transaction, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payment_options_path, :class => 'btn' %>
  </div>
<% end %>
