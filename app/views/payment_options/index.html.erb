<%- model_class = PaymentOption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= will_paginate :class =>'pagination pagination-centered' %>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:related_account) %></th>
      <th><%= model_class.human_attribute_name(:use_expenses) %></th>
      <th><%= model_class.human_attribute_name(:use_incomes) %></th>
      <th><%= model_class.human_attribute_name(:require_transaction) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @payment_options.each do |payment_option| %>
      <tr>

        <td><%= link_to payment_option.name, payment_option_path(payment_option) %></td>
        <td><%= payment_option.related_account %></td>
        <td><%=t(payment_option.use_expenses.to_s) %></td>
        <td><%=t(payment_option.use_incomes.to_s) %></td>
        <td><%=t(payment_option.require_transaction.to_s) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_payment_option_path(payment_option), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      payment_option_path(payment_option),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_payment_option_path,
            :class => 'btn btn-primary' %>
