<%= form_for @purchase_item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :purchase_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :purchase_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :product_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost_unit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost_unit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost_total, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost_total, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchase_item_path, :class => 'btn' %>
  </div>
<% end %>
