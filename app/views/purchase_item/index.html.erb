<%- model_class = PurchaseItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:purchase_id) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:cost_unit) %></th>
      <th><%= model_class.human_attribute_name(:cost_total) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_items.each do |purchase_item| %>
      <tr>
        <td><%= link_to purchase_item.id, purchase_item_path(purchase_item) %></td>
        <td><%= purchase_item.purchase_id %></td>
        <td><%= purchase_item.product_id %></td>
        <td><%= purchase_item.description %></td>
        <td><%= purchase_item.quantity %></td>
        <td><%= purchase_item.cost_unit %></td>
        <td><%= purchase_item.cost_total %></td>
        <td><%=l purchase_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_purchase_item_path(purchase_item), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      purchase_item_path(purchase_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_purchase_item_path,
            :class => 'btn btn-primary' %>
