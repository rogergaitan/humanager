<%- model_class = PurchaseItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:purchase_id) %>:</strong></dt>
  <dd><%= @purchase_item.purchase_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @purchase_item.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @purchase_item.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @purchase_item.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_unit) %>:</strong></dt>
  <dd><%= @purchase_item.cost_unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_total) %>:</strong></dt>
  <dd><%= @purchase_item.cost_total %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_item_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_item_path(@purchase_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_item_path(@purchase_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
