<%- model_class = QuotationItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:quotation_id) %>:</strong></dt>
  <dd><%= @quotation_item.quotation_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @quotation_item.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @quotation_item.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @quotation_item.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @quotation_item.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_price) %>:</strong></dt>
  <dd><%= @quotation_item.unit_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @quotation_item.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax) %>:</strong></dt>
  <dd><%= @quotation_item.tax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @quotation_item.total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:warehouse_id) %>:</strong></dt>
  <dd><%= @quotation_item.warehouse_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              quotation_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quotation_item_path(@quotation_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quotation_item_path(@quotation_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
