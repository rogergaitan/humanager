<%- model_class = OtherPayment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= will_paginate :class =>'pagination pagination-centered' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @other_payments.each do |other_payment| %>
      <tr>
        <td><%= link_to other_payment.description, other_payment_path(other_payment) %></td>
        <td>
          
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_other_payment_path(other_payment), :class => 'btn btn-mini' %>
          
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      other_payment_path(other_payment),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_other_payment_path,
            :class => 'btn btn-primary' %>
