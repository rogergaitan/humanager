<%= form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.fields_for :entity do |ent| %>
  
  <div class="control-group">
    <%= ent.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= ent.text_field :name, :class => 'text_field' %>
    </div>
  </div>  
    <div class="control-group">
    <%= ent.label :surname, :class => 'control-label' %>
    <div class="controls">
      <%= ent.text_field :surname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">

  <%= ent.label :typeid, :class => 'control-label' %>
    <div class='controls'>
      <%= ent.enum_select :typeid, :include_blank =>false %>
    </div>
  </div>

  <div class="control-group">

  <%= ent.label :entityid, :class => 'control-label' %>
    <div class='controls'>
      <%= ent.text_field :entityid %>
    </div>
  </div>

  <% end %>    
  <div class="control-group">
    <%= f.label :join_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :join_date, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn' %>
  </div>
<% end %>
