<%- model_class = Employee -%>
<%- model_entity = Entity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">   
    <dt><%= model_entity.human_attribute_name(:name) %>     </dt>
        <dd><%= @employee.entity.name %></dd>     
    <dt><%= model_entity.human_attribute_name(:surname) %>  </dt>
        <dd><%= @employee.entity.surname %></dd>
    <dt><%= model_entity.human_attribute_name(:entityid) %> </dt>
        <dd><%= @employee.entity.entityid %></dd>
    <dt><%= model_class.human_attribute_name(:join_date) %> </dt>
        <dd><%= @employee.join_date %></dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", 
              :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
