<%- model_class = CostCenter -%>
<div id="section-body" class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a data-toggle="tab" href="#tab1">
        <%=t '.title', :default => model_class.model_name.human.pluralize %>
      </a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="row-fluid">
      <div id="accordion1" class="accordion">
        <div class="accordion-group">
          <div class="accordion-heading">
            <a class="accordion-toggle" data-original-title="" href="#show" data-toggle="collapse">
              <i class="icon-list-alt icon-white"></i>
              <span class="divider-vertical"></span>
              <%=t '.title', :default => model_class.model_name.human %>
              <i class="icon-chevron-down icon-white pull-right"></i>
            </a>
          </div>
          <div id="show" class="accordion-body in collapse" style="height: auto;">
            <div class="accordion-inner paddind">
              <dl class="dl-horizontal">
                <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
                <dd><%= @cost_center.code %></dd>
                <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
                <dd><%= @cost_center.description %></dd>
                <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
                <dd><%= @cost_center.employee_id %></dd>
              </dl>
              <div class="form-actions">
                <%= link_to t('.back', :default => t("helpers.links.back")), cost_centers_path, :class => 'btn btn-maniadmin-8' %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_cost_center_path(@cost_center), :class => 'btn btn-maniadmin-2' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")), cost_center_path(@cost_center), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-maniadmin-5' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>