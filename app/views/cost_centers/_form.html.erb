<%= javascript_include_tag "cost_centers/cost_centers.js" %>
<%= form_for @cost_center, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label' %>      
    <div class="controls">
      <%= f.hidden_field :employee_id %>
      <%= text_field_tag 'employee_name', nil, :class => 'text_field', :for => :employee_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cost_centers_path, :class => 'btn' %>
  </div>
<% end %>
