<%- model_class = PaymentFrequency -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @payment_frequency.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @payment_frequency.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payment_frequencies_path, :class => 'btn'  %>
  <% if can? :update, PaymentFrequency %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_payment_frequency_path(@payment_frequency), :class => 'btn' %>
  <% end %>

  <% if can? :destroy, PaymentFrequency %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                payment_frequency_path(@payment_frequency),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
  <% end %>
</div>
