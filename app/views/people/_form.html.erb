<%= form_for @person, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :id_person, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :id_person, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :first_surname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_surname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :second_surname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :second_surname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :birthday, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :birthday, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipoid, :class => 'control-label' %>
    <div class="controls">
      <%= f.enum_select :tipoid, :include_blank => false %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.enum_select :gender, :include_blank => false %>
    </div>
  </div>
  <div class="control-group">
     <%= f.label :marital_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.enum_select :marital_status, :include_blank => false %>
    </div>
  </div>
  <div class="control-group">
      <%= f.label :fb_person, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :fb_person, :class => 'text_field' %>
      </div>
    </div>
  <%= f.fields_for :employee do |builder| %>
    <div class="control-group">
      <%= builder.label :department_id, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :department_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :ccss_calculated, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :ccss_calculated, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :join_date, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :join_date, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :means_of_payment_id, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :means_of_payment_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :number_of_dependents, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :number_of_dependents, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :occupation_id, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :occupation_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :payment_frequency_id, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :payment_frequency_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :payment_method_id, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :payment_method_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :role_id, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :role_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :social_insurance, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :social_insurance, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :spouse, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :spouse, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :wage_payment, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :wage_payment, :class => 'text_field' %>
      </div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                people_path, :class => 'btn' %>
  </div>
<% end %>
